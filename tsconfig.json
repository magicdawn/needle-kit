{
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": "src",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals", "vitest/importMeta"],
    "strictNullChecks": true,
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "ts-node": {
    "swc": true
  }
}
