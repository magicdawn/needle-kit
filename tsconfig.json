{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2022", // as a Library, compatible with ES2022, 3 years ago
    "module": "preserve",
    "strict": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals", "vitest/importMeta"],
    "noEmit": true
  }
}
