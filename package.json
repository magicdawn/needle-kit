{
  "name": "needle-kit",
  "version": "3.4.2",
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977",
  "description": "Arya's needle, little but powerful.",
  "type": "module",
  "keywords": [
    "needle",
    "kit"
  ],
  "license": "MIT",
  "homepage": "https://github.com/magicdawn/needle-kit",
  "bugs": {
    "url": "https://github.com/magicdawn/needle-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicdawn/needle-kit.git"
  },
  "author": "magicdawn",
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist/",
    "package.json"
  ],
  "main": "dist/index.cjs",
  "types": "dist/index.d.cts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "test": "vitest run",
    "prepare": "husky",
    "test:dev": "vitest",
    "test-cover": "vitest run --coverage",
    "dev": "tsup --watch",
    "build": "tsup",
    "prepublishOnly": "pnpm test && pnpm build",
    "typeswrong": "attw --pack .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@humanfs/node": "^0.16.6",
    "@magicdawn/finder-sort": "^0.4.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "micromatch": "^4.0.8",
    "path-type": "^6.0.0",
    "shell-escape": "^0.2.0",
    "untildify": "^5.0.0"
  },
  "devDependencies": {
    "@magicdawn/eslint-config": "^1.0.3",
    "@magicdawn/prettier-config": "^0.1.0",
    "@swc/core": "^1.11.24",
    "@types/fs-extra": "^11.0.4",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.15.18",
    "@types/shell-escape": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.1.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "*": [
      "eslint --fix --no-warn-ignored",
      "prettier --write --ignore-unknown"
    ]
  }
}
