{
  "name": "needle-kit",
  "version": "3.5.0",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "description": "Arya's needle, little but powerful.",
  "type": "module",
  "keywords": [
    "needle",
    "kit"
  ],
  "license": "MIT",
  "homepage": "https://github.com/magicdawn/needle-kit",
  "bugs": {
    "url": "https://github.com/magicdawn/needle-kit/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/magicdawn/needle-kit.git"
  },
  "author": "magicdawn",
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "dist/",
    "package.json"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "scripts": {
    "test": "vitest run",
    "prepare": "husky",
    "test:dev": "vitest",
    "test-cover": "vitest run --coverage",
    "dev": "tsdown --watch",
    "build": "tsdown",
    "prepublishOnly": "pnpm test && pnpm build",
    "typeswrong": "attw --pack .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@humanfs/node": "^0.16.6",
    "@magicdawn/finder-sort": "^0.4.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.1",
    "micromatch": "^4.0.8",
    "path-type": "^6.0.0",
    "shell-escape": "^0.2.0",
    "untildify": "^5.0.0"
  },
  "devDependencies": {
    "@magicdawn/eslint-config": "^1.5.9",
    "@magicdawn/prettier-config": "^0.1.0",
    "@swc/core": "^1.13.3",
    "@types/fs-extra": "^11.0.4",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^24.2.0",
    "@types/shell-escape": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "tsdown": "^0.13.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "lint-staged": {
    "*": [
      "eslint --fix --no-warn-ignored",
      "prettier --write --ignore-unknown"
    ]
  }
}
